<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/bt_find"
        android:text="发现群"
        android:background="#00000000"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:text="消息"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_gravity="top"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/bt_lt"
        android:src="@mipmap/xxxx"
        android:layout_gravity="center"
        android:background="#00000000"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:background="#c0c0c0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:background="#FFFFFF"
            android:text="搜索联系人和群"
            android:layout_margin="6dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RadioButton
        android:id="@+id/rb_mine"
        android:button="@null"
        android:text="我的"
        android:drawablePadding="16dp"
        android:layout_margin="10dp"
        android:drawableLeft="@mipmap/wd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/rb_xx"
        android:button="@null"
        android:text="评论"
        android:drawablePadding="16dp"
        android:layout_margin="10dp"
        android:drawableLeft="@mipmap/push_icon_app_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/rb_zan"
        android:button="@null"
        android:text="赞"
        android:drawablePadding="16dp"
        android:layout_margin="10dp"
        android:drawableLeft="@mipmap/push_icon_app_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/list_xx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>