<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_name"
        android:text="name"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/iv_title"
        android:layout_alignTop="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/from"
        android:text="from"
        android:textSize="10sp"
        android:paddingBottom="16dp"
        android:textColor="#FF0000"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/tv_come"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/content"
        android:text="content"
        android:textSize="16dp"
        android:layout_below="@+id/iv_title"
        android:layout_alignLeft="@+id/iv_title"
        android:layout_width="match_parent"
        android:autoLink="all"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_title"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="6dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/tv_time"
        android:text="time"
        android:textSize="10sp"
        android:layout_below="@id/tv_name"
        android:layout_alignLeft="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_come"
        android:layout_toRightOf="@id/tv_time"
        android:layout_below="@+id/tv_name"
        android:text="    来自:"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_vip"
        android:src="@mipmap/v_yellow"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_alignTop="@+id/tv_name"
        android:layout_width="16dp"
        android:layout_height="16dp" />
    <LinearLayout
        android:layout_margin="16dp"
        android:layout_below="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:button="@null"
            android:drawableLeft="@mipmap/market_toolbar_share_normal"
            android:text="转发"
            android:id="@+id/ib_send"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <RadioButton
            android:button="@null"
            android:drawableLeft="@mipmap/market_toolbar_comments_normal"
            android:id="@+id/comment"
            android:text="评论"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <RadioButton
            android:button="@null"
            android:drawableLeft="@mipmap/market_icon_dislike"
            android:id="@+id/love"
            android:text="点赞"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>