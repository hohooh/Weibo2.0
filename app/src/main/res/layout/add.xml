<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="#C0C0C0"
    android:layout_weight="1">
</LinearLayout>
<LinearLayout
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="#C0C0C0"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:text="文字"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/push_icon_app_1"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:background="#00000000"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="文字"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/push_icon_app_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="文字"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/push_icon_app_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:text="文字"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/messagescenter_groupchat_notice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="文字"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/messages_center_private_chat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="文字"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/messages_center_chat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
    <ImageButton
        android:id="@+id/ib_cancel"
        android:src="@mipmap/xx"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>